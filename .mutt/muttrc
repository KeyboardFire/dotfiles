set mbox_type = 'Maildir'
set folder = '~/.mail/keyboardfire'
set spoolfile = '+Inbox'
set record = '+Sent'
set postponed = '+Drafts'
mailboxes =Inbox =Sent =Drafts

set header_cache = '~/.cache/mutt'
set message_cachedir = '~/.cache/mutt'

set mail_check = 20
set timeout = 30

set realname = 'KeyboardFire'
set from = 'andy@keyboardfire.com'
set use_from = yes

set smtp_url = 'smtps://andy@keyboardfire.com@mail.gandi.net:465/'
# smtp_pass is set in ~/.mutt/private

set ssl_force_tls = yes

auto_view text/html
alternative_order text/plain text/enriched text/html

# remove delay on changing mailboxes
set sleep_time = 0

# set the X-Mailer header
my_hdr X-Mailer: `mutt -v | head -1`

# native notifications
set status_format = "/home/llama/.mutt/notify-script '%b' '%f' '%n' '%o' '-%r-Mutt: %f [Msgs:%?M?%M/?%m%?n? New:%n?%?o? Old:%o?%?d? Del:%d?%?F? Flag:%F?%?t? Tag:%t?%?p? Post:%p?%?b? Inc:%b?%?l? %l?]---(%s/%S)-%>-(%P)---'|"

# set the terminal title
set ts_enabled = yes

# notmuch integration
macro index n \
"<enter-command>set my_old_pipe_decode=\$pipe_decode my_old_wait_key=\$wait_key nopipe_decode nowait_key<enter>\
<shell-escape>notmuch-mutt -r --prompt search<enter>\
<change-folder-readonly>`echo ${XDG_CACHE_HOME:-$HOME/.cache}/notmuch/mutt/results`<enter>\
<enter-command>set pipe_decode=\$my_old_pipe_decode wait_key=\$my_old_wait_key<enter>" \
      "notmuch: search mail"

# private stuff like passwords and aliases to groups of emails
source ~/.mutt/private
